{
    "name": "abdmaster/eicra_email_pm",
    "type": "mini-app",
    "description": "A stupid mini app to send quick templated email to our Project Manager",
    "homepage": "http://github.com/codeguy/Slim",
    "license": "MIT",
    "authors": [
        {
            "name": "Josh Lockhart",
            "email": "info@joshlockhart.com",
            "homepage": "http://www.joshlockhart.com/"
        }
    ],
    "require": {
        "php": ">=5.4.1",
